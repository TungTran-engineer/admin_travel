<%- include('layouts/header.ejs', { title: 'Edit Trip' }); %>
<div class="container mt-4">
    <h3 class="text-center text-primary">Edit Trip</h3>
    <div class="d-flex justify-content-center">
        <form action="/travel/edit/<%= trip._id %>" method="post" style="width: 60%; margin-left: auto; margin-right: auto;">
            <!-- Hidden input field to indicate PUT request -->
            <input type="hidden" name="_method" value="PUT">

            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= trip.title %>" required>
            </div>
            
            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" value="<%= trip.location %>" required>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="imageUrl" class="form-label">Image URL</label>
                <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<%= trip.imageUrl %>">
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required><%= trip.description %></textarea>
            </div>

            <!-- Date -->
            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" name="date" value="<%= new Date(trip.date).toISOString().split('T')[0] %>" required>
            </div>

            <!-- Time -->
            <div class="mb-3">
                <label for="time" class="form-label">Time</label>
                <input type="time" class="form-control" id="time" name="time" value="<%= trip.time %>" required>
            </div>

            <!-- Guide -->
            <div class="mb-3">
                <label for="guide" class="form-label">Guide</label>
                <input type="text" class="form-control" id="guide" name="guide" value="<%= trip.guide %>" required>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 mt-3">Update Trip</button>
        </form>
    </div>
</div>

<!-- Optional: Bootstrap JS for interactive elements -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
