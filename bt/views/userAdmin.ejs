<%- include('layouts/header.ejs', { title: 'Admin Dashboard' }); %>

<div class="container mt-4">
    <!-- Wrapper để căn chỉnh cả tiêu đề và bảng -->
    <div style="margin-left: 150px;">
        <h3>Admin List</h3>

        <!-- Table to display admins -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% if (admins.length > 0) { %>
                    <% admins.forEach(admin => { %>
                        <tr>
                            <td><%= admin.username %></td>
                            <td><%= admin.password %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center">No admins found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
