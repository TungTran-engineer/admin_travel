<head>
    <!-- Thêm các thư viện CSS cần thiết -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <!-- Đường dẫn tới file CSS tùy chỉnh của bạn -->

</head>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* Header Navbar Customization */
        .navbar-custom {
            background: linear-gradient(to right, #4e73df, #375ad8);
            color: white;
        }
        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: white;
        }
        .navbar-custom .nav-link:hover {
            color: #d1d3e2;
        }
        .profile-img {
            border-radius: 50%;
            width: 32px;
            height: 32px;
            border: 2px solid white;
        }
        .badge {
            font-size: 0.8rem;
            position: absolute;
            top: -5px;
            right: -5px;
        }

        /* Sidebar Customization */
        .sidebar-full-height {
            height: 100%;
            background-color: #4e73df;
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            transition: all 0.3s ease;
        }
        .sidebar-full-height:hover {
            width: 250px;
        }
        .sidebar-sticky {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 15px;
            height: 100%;
        }
        .nav-link {
            display: flex;
            align-items: center;
            color: #adb5bd;
            font-size: 1rem;
            padding: 10px 15px;
            border-radius: 4px;
            transition: all 0.2s ease-in-out;
        }
        .nav-link:hover {
            background-color: #495057;
            color: white;
        }
        .nav-link i {
            margin-right: 10px;
        }
        .nav-link.active {
            background-color: #4e73df;
            color: white;
        }

        /* Main Content */
        .main-content {
            margin-left: 200px;
            padding: 20px;
            transition: all 0.3s ease;
        }
        .sidebar-full-height:hover ~ .main-content {
            margin-left: 250px;
        }

        /* Tooltip */
        .tooltip-inner {
            background-color: #f8f9fa;
            color: #343a40;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="#">TripsAdmin</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav position-relative">
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="tooltip" title="Search">
                        <i class="fas fa-search"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="tooltip" title="Notifications">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger">3</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="tooltip" title="Messages">
                        <i class="fas fa-envelope"></i>
                        <span class="badge badge-warning">2</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="tooltip" title="Tasks">
                        <i class="fas fa-tasks"></i>
                        <span class="badge badge-success">3</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="tooltip" title="Profile">
                        <img src="profile.jpg" alt="Profile" class="profile-img"> Maman Ketoprak
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar sidebar-full-height">
                <div class="sidebar-sticky">
                    <h5 class="text-white mt-4 mb-3">TripsAdmin</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="Dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="travel">
                                <i class="fas fa-table"></i> Travelling
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users">
                                <i class="fas fa-user"></i> UserTravelling
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="admin">
                                <i class="fas fa-user-shield"></i> Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-md-10 main-content">
                <!-- Nội dung chính -->
            </main>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(function () {
            // Khởi tạo tooltip
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Chuyển hướng đến trang Dashboard nếu truy cập vào trang gốc
        document.addEventListener('DOMContentLoaded', function () {
            const currentPath = window.location.pathname;
            if (currentPath === '/' || currentPath === '/index.html') {
                window.location.href = 'Dashboard';
            }
        });
    </script>
</body>
</html>
